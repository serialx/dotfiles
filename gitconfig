[alias]
	up = !git pull --autostash --rebase --prune $@ && git submodule update --init --recursive
	ds = diff --staged
	ci = commit -v
	cia = commit -v -a
	st = status
	co = checkout
	#l = log --graph --all --color --oneline --decorate
	l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	lb = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[core]
	excludesfile = ~/.gitignore
	pager = less -X
[push]
	default = simple
[color]
	ui = auto
[commit]
	verbose = true
